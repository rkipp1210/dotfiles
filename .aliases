# List all files colorized in long format
alias ll='ls -lh'

# List all files colorized in long format, including dot files
alias la='ls -lha'

# List only directories
alias lsd='ls -l | grep "^d"'

# git status shorten
alias gits='git status'

# git commit shorten
alias gitc='git commit -m'

# git diff shorten
alias gitd='git diff'

# add a `git-refresh` command
alias git-refresh='git pull && git submodule update --init --recursive'

# remove untagget docker images
alias docker-rmi-untag='docker rmi $(docker images | grep "^<none>" | awk "{print $3}")'

# stop all docker containers
alias docker-stop-all='docker stop $(docker ps -q)'

# remove all docker containers
alias docker-rm-all='docker rm $(docker ps -a -q)'

# stop and remove all containers
alias docker-stop-rm='docker-stop-all && docker-rm-all'
